{
  "name": "redblink",
  "version": "1.0.0",
  "description": "Non-intrusive AI debugging assistant for VS Code and browsers",
  "license": "MIT",
  "author": "RedBlink Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/RedBlink/RedBlink.git"
  },
  "homepage": "https://redblink.dev",
  "keywords": [
    "ai",
    "debugging",
    "vscode",
    "browser-extension",
    "error-detection",
    "developer-tools"
  ],
  "scripts": {
    "setup": "npm install && npm run build",
    "dev": "npm run dev:vscode",
    "dev:vscode": "cd vscode-extension && npm run dev",
    "dev:browser": "cd browser-extension && npm run dev",
    "dev:extensions": "npm run dev:vscode & npm run dev:browser",
    "build": "npm run build:vscode && npm run build:browser",
    "build:vscode": "cd vscode-extension && npm run build",
    "build:browser": "cd browser-extension && npm run build",
    "build:shared": "tsc --noEmit",
    "watch": "npm run watch:vscode & npm run watch:browser",
    "watch:vscode": "cd vscode-extension && npm run watch",
    "watch:browser": "cd browser-extension && npm run watch",
    "lint": "npm run lint:vscode && npm run lint:browser",
    "lint:vscode": "cd vscode-extension && npm run lint",
    "lint:browser": "cd browser-extension && npm run lint",
    "lint:fix": "npm run lint:fix:vscode && npm run lint:fix:browser",
    "lint:fix:vscode": "cd vscode-extension && npm run lint:fix",
    "lint:fix:browser": "cd browser-extension && npm run lint:fix",
    "format": "npm run format:vscode && npm run format:browser && npm run format:root",
    "format:vscode": "cd vscode-extension && npm run format",
    "format:browser": "cd browser-extension && npm run format",
    "format:root": "prettier --write \"*.json *.md *.js\" \"shared/**/*.ts\" \"docs/**/*.md\"",
    "type-check": "npm run type-check:vscode && npm run type-check:browser && npm run type-check:shared",
    "type-check:vscode": "cd vscode-extension && npm run type-check",
    "type-check:browser": "cd browser-extension && npm run type-check",
    "type-check:shared": "tsc --noEmit",
    "test": "npm run test:vscode && npm run test:browser",
    "test:watch": "npm run test:watch:vscode & npm run test:watch:browser",
    "test:vscode": "cd vscode-extension && npm run test",
    "test:browser": "cd browser-extension && npm run test",
    "test:watch:vscode": "cd vscode-extension && npm run test:watch",
    "test:watch:browser": "cd browser-extension && npm run test:watch",
    "test:coverage": "npm run test:coverage:vscode && npm run test:coverage:browser",
    "test:coverage:vscode": "cd vscode-extension && npm run test:coverage",
    "test:coverage:browser": "cd browser-extension && npm run test:coverage",
    "package:vscode": "cd vscode-extension && vsce package",
    "package:browser": "cd browser-extension && zip -r ../RedBlink-browser.zip src manifest.json",
    "clean": "rm -rf dist build out && cd vscode-extension && npm run clean && cd ../browser-extension && npm run clean",
    "all": "npm run lint && npm run type-check && npm run test && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.5.0"
  }
}