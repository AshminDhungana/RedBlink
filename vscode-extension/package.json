{
  "name": "redblink",
  "displayName": "RedBlink",
  "description": "Non-intrusive AI debugging assistant - Red blink. Smart questions. Any AI model.",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "RedBlink",
  "repository": {
    "type": "git",
    "url": "https://github.com/RedBlink/RedBlink.git"
  },
  "homepage": "https://redblink.dev",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Debuggers",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "debugging",
    "error-detection",
    "claude",
    "gpt",
    "gemini"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "redblink-view",
          "title": "RedBlink",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "redblink-view": [
        {
          "id": "redblink-sidebar",
          "name": "RedBlink"
        }
      ]
    },
    "keybindings": [
      {
        "command": "redblink.toggleSidebar",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ],
    "commands": [
      {
        "command": "redblink.toggleSidebar",
        "title": "Toggle RedBlink Sidebar"
      },
      {
        "command": "redblink.runAssistant",
        "title": "Run in Assistant"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "dev": "tsc && webpack --mode development --watch",
    "build": "tsc && webpack --mode production",
    "watch": "tsc --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.css\" \"src/**/*.html\"",
    "type-check": "tsc --noEmit",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf out dist"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.8.0",
    "openai": "^4.24.0",
    "@google/generative-ai": "^0.3.0",
    "axios": "^1.6.0",
    "keytar": "^7.9.0"
  }
}